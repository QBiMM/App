# Docker Compose Environment Variables Template
# Copy this file to .env and fill in the actual values

# Application URLs
APP_SELF_URL=https://yourdomain.com/api/
APP_ANGULAR_URL=https://yourdomain.com
APP_CORS_ORIGINS=https://*.yourdomain.com,http://localhost:4200
APP_REDIRECT_ALLOWED_URLS=https://yourdomain.com
AUTHSERVER_AUTHORITY=https://yourdomain.com/api/

# Database Connection
DB_CONNECTION_STRING=Server=travelapp_sqlserver;Database=TravelApp;User Id=sa;Password=YOUR_DB_PASSWORD;MultipleActiveResultSets=true;TrustServerCertificate=True

# Certificate and Encryption
KESTREL_CERT_PASSWORD=YOUR_KESTREL_CERT_PASSWORD
AUTHSERVER_CERT_PASSPHRASE=YOUR_AUTHSERVER_CERT_PASSPHRASE
STRING_ENCRYPTION_PASSPHRASE=YOUR_STRING_ENCRYPTION_PASSPHRASE

# OpenIddict
OPENIDDICT_TRAVELAPP_ROOT_URL=https://yourdomain.com